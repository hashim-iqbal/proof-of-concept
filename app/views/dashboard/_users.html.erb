<% @users.each do |user| %>
  <div class='col-sm-4'>
  <div class='card border-5 border-dark m-4 p-3'>
    <div class='d-flex ms-3 mt-2'>
      <div>
        <%= image_tag user.avatar, class: 'card-img-top rounded-circle' %>
      </div>
      <div class='ms-2'>
        <div class='fw-bold card-title mb-0'><%= user.name %></div>
        <div class='text-muted ms-1 card-text'><%= user.occupation %></div>
      </div>
    </div>
    <div class='d-flex mt-2'>
      <div class='col-sm-8'>
        <%= build_line_chart(user.events.conversion) %>
      </div>
      <div class='col-sm-4'>
        <div class='text-end text-warning'><%= user.events.impression.count %></div>
        <div class='text-end text-secondary small'>impressions</div>
        <div class='text-end text-primary'><%= user.events.conversion.count %></div>
        <div class='text-end text-secondary small'>conversions</div>
        <div class='text-end text-success fw-bold'><%= number_to_currency user.events.sum(:revenue), precision: 0 %></div>
      </div>
    </div>
  </div>
</div>
<% end %>
